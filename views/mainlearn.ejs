<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learn - CodeCanvas</title>
    
    <link rel="stylesheet" href="/mainlearn.css">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
<div id="wrapper">
    <div class="container">
        <!-- NAVBAR -->
        <nav class="navbar">
            <a href="/" class="back-btn">
                <i class="fas fa-arrow-left"></i>
            </a>

            <!-- Logo + Text (centered) -->
            <div class="nav-center">
                <img src="/media/logocc.png" class="logo" alt="CodeCanvas">
                <span class="nav-title">CodeCanvas</span>
            </div>

        </nav>

        <!-- HEADER / TITLE SECTION -->
        <header class="head">
            <h1 class="topic">Topics</h1>
            <p class="subtitle">Build strong DSA foundations • Step-by-step concepts & examples</p>
        </header>

        <!-- MAIN CONTENT - ACCORDION TOPICS LIST -->
        <section class="main">
            <ul class="topicslist accordion-list">

                <!-- ARRAY -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Array</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <a href="learn/array-insertion">Insertion</a>
                        <a href="learn/array-deletion">Deletion</a>
                    </div>
                </li>

                <!-- LINKED LIST -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Linked List</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <a href="learn/linkedlist-insertion">Insertion</a>
                        <a href="learn/linkedlist-deletion">Deletion</a>
                    </div>
                </li>

                <!-- SORTING -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Sorting</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <a href="learn/bubblesort">Bubble Sort</a>
                        <a href="learn/selectionsort">Selection Sort</a>
                        <a href="learn/insertionsort">Insertion Sort</a>
                        <a href="learn/mergesort">Merge Sort</a>
                        <a href="learn/quicksort">Quick Sort</a>
                    </div>
                </li>

                <!-- SEARCHING -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Searching</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <a href="learn/searchlinear">Linear Search</a>
                        <a href="learn/searchbinary">Binary Search</a>
                    </div>
                </li>

                <!-- STACK – direct link -->
                <li class="topic-item direct">
                    <a href="/learn/stack" class="topic-link">
                        <span class="topic-title">Stack</span>
                    </a>
                </li>

                <!-- QUEUE – direct link -->
                <li class="topic-item direct">
                    <a href="/learn/queue" class="topic-link">
                        <span class="topic-title">Queue</span>
                    </a>
                </li>

                <!-- BINARY TREE (with nested Traversal) -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Binary Tree</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <div class="nested-item">
                            <div class="nested-header" onclick="event.stopPropagation(); this.parentElement.classList.toggle('open')">
                                <span>Traversal</span>
                                <span class="arrow">▼</span>
                            </div>
                            <div class="nested-sub">
                                <a href="learn/binarytreetraversalDFS">DFS</a>
                                <a href="learn/binarytreetraversalBFS">BFS</a>
                            </div>
                        </div>
                        <a href="learn/binarytreeinsertion">Insertion</a>
                        <a href="learn/binarytreedeletion">Deletion</a>
                    </div>
                </li>

                <!-- BINARY SEARCH TREE -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Binary Search Tree</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <a href="learn/binarysearchtreeinsertion">Insertion</a>
                        <a href="learn/binarysearchtreedeletion">Deletion</a>
                        <a href="learn/binarysearchtreesearching">Searching</a>
                    </div>
                </li>

                <!-- GRAPHS -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Graphs</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <a href="learn/graphbfs">BFS</a>
                        <a href="learn/graphdfs">DFS</a>
                        <a href="learn/graphtopological">Topological Sort</a>
                    </div>
                </li>

                <!-- ALGORITHMS -->
                <li class="topic-item">
                    <div class="topic-header" onclick="this.parentElement.classList.toggle('open')">
                        <span class="topic-title">Algorithms</span>
                        <span class="arrow">▼</span>
                    </div>
                    <div class="subtopics">
                        <a href="learn/algoprims">Prim's Algorithm</a>
                        <a href="learn/algokruskal">Kruskal Algorithm</a>
                        <a href="learn/algodjikstra">Dijkstra Algorithm</a>
                        <a href="learn/algobellman">Bellman Ford Algorithm</a>
                        <a href="learn/algokosaraju">Kosaraju Algorithm</a>
                        <a href="learn/algofloydwarshall">Floyd Warshall</a>
                    </div>
                </li>

            </ul>
        </section>
    </div>
</div>

<!-- Optional: Small JS to prevent nested clicks from bubbling -->
<script>
    document.querySelectorAll('.nested-header').forEach(header => {
        header.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent parent li from toggling
        });
    });
</script>
</body>
</html>